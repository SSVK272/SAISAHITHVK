def calculate_bill_amount(food_type,quantity_ordered,distance_in_kms):
    bill_amount=0
    #write your logic here
    if food_type=='V' and distance_in_kms>0 and quantity_ordered>=1:
        if distance_in_kms<=3:
            bill_amount=(quantity_ordered*120)
        elif 3<distance_in_kms<=6:
            bill_amount=(quantity_ordered*120+(distance_in_kms*3))
        elif distance_in_kms>6:
            bill_amount=(quantity_ordered*120+(distance_in_kms*6))
    elif food_type=='N' and distance_in_kms>0 and quantity_ordered>=1:
        if distance_in_kms<=3:
            bill_amount=(quantity_ordered*150)
        elif 3<distance_in_kms<=6:
            bill_amount=(quantity_ordered*150+(distance_in_kms*3))
        elif distance_in_kms>6:
            bill_amount=(quantity_ordered*150+(distance_in_kms*6))
            
    else:
        bill_amount=-1
            
    return bill_amount

#Provide different values for food_type,quantity_ordered,distance_in_kms and test your program
bill_amount=calculate_bill_amount("N",2,7)
print(bill_amount)
